{
  "name": "@wyw-in-js/nextjs",
  "version": "0.5.3",
  "dependencies": {
    "@wyw-in-js/webpack-loader": "workspace:*",
    "import-meta-resolve": "^4.1.0"
  },
  "devDependencies": {
    "babel-plugin-transform-import-meta": "^2.2.1",
    "@wyw-in-js/babel-config": "workspace:*",
    "@wyw-in-js/eslint-config": "workspace:*",
    "@wyw-in-js/jest-preset": "workspace:*",
    "@wyw-in-js/ts-config": "workspace:*"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    "import": "./esm/index.mjs",
    "require": "./lib/index.js",
    "types": "./types/index.d.ts"
  },
  "files": [
    "esm/",
    "lib/",
    "types/",
    "next-font.js",
    "next-image.js",
    "nextjs.wyw-in-js.css",
    "css-loader.js"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.mjs",
  "peerDependencies": {
    "next": "^12.0.0 || ^13.0.0 || ^14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:esm": "babel src --out-dir esm --out-file-extension .mjs --extensions '.js,.jsx,.ts,.tsx' --source-maps --delete-dir-on-start",
    "build:lib": "cross-env NODE_ENV=legacy babel src --out-dir lib --extensions '.js,.jsx,.ts,.tsx' --source-maps --delete-dir-on-start --plugins=babel-plugin-transform-import-meta",
    "build:types": "tsc --project ./tsconfig.lib.json --baseUrl . --rootDir ./src",
    "lint": "eslint --ext .js,.ts ."
  },
  "types": "types/index.d.ts"
}
