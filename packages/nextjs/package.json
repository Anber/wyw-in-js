{
  "name": "@wyw-in-js/nextjs",
  "version": "1.0.7",
  "type": "module",
  "dependencies": {
    "@wyw-in-js/turbopack-loader": "workspace:*",
    "@wyw-in-js/webpack-loader": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^16.18.55",
    "@wyw-in-js/babel-config": "workspace:*",
    "@wyw-in-js/eslint-config": "workspace:*",
    "@wyw-in-js/ts-config": "workspace:*",
    "next": ">=13.0.0",
    "webpack": "^5.76.0"
  },
  "engines": {
